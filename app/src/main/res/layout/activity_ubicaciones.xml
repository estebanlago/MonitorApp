<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true"
    tools:context=".UbicacionesActivity">

    <TextView
        android:id="@+id/textViewBlankSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="" />

    <Button
        android:id="@+id/agregarUbicacionButton"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textViewBlankSpace"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="8sp"
        android:backgroundTint="@color/orange"
        android:padding="10sp"
        android:text="@string/agregarUbicacionButtonText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_add_24" />

    <EditText
        android:id="@+id/buscarUbicacionEditText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agregarUbicacionButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8sp"
        android:layout_marginBottom="8sp"
        android:background="@drawable/edittext_border"
        android:backgroundTint="#F0EAEA"
        android:hint="@string/buscarAparatoPorNombreEditText"
        android:inputType="text"
        android:padding="16sp" />

    <Button
        android:id="@+id/confirmarBusquedaButton"
        android:layout_width="103dp"
        android:layout_height="67dp"
        android:layout_below="@+id/agregarUbicacionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/buscarUbicacionEditText"
        android:padding="30dp"
        android:backgroundTint="@color/orange"
        app:icon="@drawable/baseline_search_24_white" />

</RelativeLayout>