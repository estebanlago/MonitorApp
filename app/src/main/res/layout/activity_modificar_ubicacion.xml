<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearUbicacionActivity">

    <TextView
        android:id="@+id/tituloSeccionModificarUbicacionesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8sp"
        android:text="@string/modificarUbicacionTituloString"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tituloUbicacionesSpinnerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloSeccionModificarUbicacionesTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:padding="8sp"
        android:text="@string/seleccionarLaUbicacionSpinnerString"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/nombreUbicacionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloUbicacionesSpinnerTextView"
        android:layout_margin="1sp"
        android:padding="16sp" />


</RelativeLayout>